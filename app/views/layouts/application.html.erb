<!DOCTYPE html>
<html>
<head>
  <title>ToApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
	<div class='container'>
		<div class='navigation'>
		<%= link_to 'Users', users_path %>
		<%= link_to 'Products', products_path %>
		<% if logged_in? %>
			<%= link_to "Log out", logout_admin_path, method: :delete, class: 'log' %>
		<% end %>
		<% if !logged_in? %>
			<%= link_to 'Login', login_admin_path, class: 'log' %>
			<% end %>
		</div>
	</div>
	</header>

	<div class='content'>
		<%= yield %>
	</div>

	<footer>
		<div class='container'>
			<p>Â©mfunda</p>
		</div>
	</footer>
 
</body>
</html>
